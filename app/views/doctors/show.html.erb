<h1><%= @doctor.name %></h1>
<h2>Availabilities:</h2>
<ul>
  <%debugger%>
  <% @doctor.availabilities.each do |availability| %>
    From: <li><%= availability.start_time.strftime("%B %d, %Y %H:%M") %></li>
    To: <li><%= availability.end_time.strftime("%B %d, %Y %H:%M") %></li>
  <% end %>
</ul>

<h2>Appointments:</h2>
<ul>
  <% @doctor.appointments.each do |appointment| %>
    <li><%= link_to appointment.patient.name, appointment %></li>
      <%if appointment.pending?%>
        <%= link_to 'Accept', accept_doctor_appointment_path(appointment), method: :patch %>
        <%= link_to 'Reject', reject_doctor_appointment_path(appointment), method: :patch %>
      <%end%>
  <% end %>
</ul>
